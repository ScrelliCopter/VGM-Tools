root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_width = 4

[{CMakeLists.txt,*.cmake}]
indent_style = tab
indent_size = tab
max_line_length = 120

[*.{c,cc,cpp,h,hpp,hh,m,mm}]
indent_style = tab
indent_size = tab
max_line_length = 120

[*.py]
indent_style = tab
indent_size = tab
max_line_length = 120
